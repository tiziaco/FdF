{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang build active file",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "draw.c",
                "transform.c",
                "handle_events.c",
                "lst_utils.c",
                "map.c",
                "matrix.c",
                "utils.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I/usr/X11/include",
                "-L/usr/X11/lib",
                "-lX11",
                "-L${fileDirname}/../lib/libft",
                "-lft",
                "-L${fileDirname}/../lib/mlx_linux",
                "-lmlx",
                "-lXext"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
